<div class="container">
<div class=" jumbotron">
  <% if flash[:danger] %>
    <div class="alert alert-danger">
    <p><%= flash[:danger] %></p>
    </div>
  <% end %>



  <h1>メモの新規作成</h1>
  <div class="row">
    <div class="col-xs-6">
      <%= form_for(@memomemo) do |f| %>
        <% if @memomemo.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @memomemo.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="form-group">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control'  %>
        </div>

        <div class="form-group">
          <%= f.label :content, '内容' %>
          <%= f.text_field :content, class: 'form-control'  %>
        </div>

        <%= f.submit '投稿', class: 'btn btn-primary' %>
      <% end %>
      <%= link_to '一覧へ', memomemos_path %>
    </div>
  </div>
</div>
</div>


